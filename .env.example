# Jurassic Park Dino Encyclopedia Environment Variables

# Application Settings
NEXT_PUBLIC_APP_NAME="Jurassic Park Dino Encyclopedia"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Settings (if needed for future features)
# NEXT_PUBLIC_API_URL="https://api.jurrasicpark.com"
# API_SECRET_KEY="your-secret-key-here"

# Database Settings (if needed for future features)
# DATABASE_URL="postgresql://username:password@localhost:5432/dinosaur_db"
# REDIS_URL="redis://localhost:6379"

# External Services (if needed for future features)
# WEATHER_API_KEY="your-weather-api-key"
# MAPS_API_KEY="your-maps-api-key"

# Security Settings
# JWT_SECRET="your-jwt-secret-here"
# ENCRYPTION_KEY="your-encryption-key-here"

# Analytics (if needed)
# GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
# VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_EMERGENCY_MODE=false

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
